<form action="/users" method="POST">
  <div class="imgcontainer">
    <img src="/img/avatar.svg" alt="Avatar" class="avatar" />
    <h1>Welcome</h1>
    <% if (message) { %>
    <p><%- message %></p>
    <% } %>
  </div>

  <div class="container">
    <label for="username"><b>Username</b></label>
    <input type="text" placeholder="Enter Username" name="username" required />

    <label for="password"><b>Password</b></label>
    <input
      type="password"
      placeholder="Enter Password"
      name="password"
      required
    />

    <button type="submit">Create Account</button>
  </div>
</form>

<style>
  form {
    border-radius: 1rem;
    background-color: #333;
    color: white;
    position: relative;
    width: 35rem;
    margin-top: 10rem;
    margin-left: auto;
    margin-right: auto;
  }

  input[type="text"],
  input[type="password"] {
    width: 100%;
    padding: 12px 20px;
    margin: 1rem 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
  }

  button {
    background-color: #4caf50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 100%;
  }

  button:hover {
    opacity: 0.8;
  }

  .imgcontainer {
    text-align: center;
    padding-top: 2rem;
    padding-bottom: 2rem;
    border-bottom: solid white;
  }

  img.avatar {
    background-color: white;
    width: 20%;
    border-radius: 50%;
  }

  .container {
    padding: 16px;
  }
</style>
