<main id="swup" class="transition-fade">
  <div class="content">
  	<div class="cart-container">
	    <h1>Your Cart</h1>
	    <table class="cart-table">
	    	<tr>
	    		<th>Name</th>
	    		<th>Quantity</th>
	    		<th>Price</th>
	    		<th>Total</th>
	    	</tr>
	    	<% sub = 0.00 %>
		    <% for(var i=0; i<cartItems.length; i++){ %>
		    	<tr class="item-row">
					<td><%= cartItems[i].name %></td>
					<td>
						<button class="removal-button">X</button>
						<input type="number" step="1" size="3" min="1" max="999" value="<%= cartItems[i].quantity %>">
					</td>
					<td><%= cartItems[i].price %></td>
					<% sub += cartItems[i].price * cartItems[i].quantity %>
					<td><%= cartItems[i].price * cartItems[i].quantity %></td>
				</tr>
			<% } %>
			<% tax = sub * 0.0825 %>
			<tr class="total-row">
				<th colspan="3">SubToal</th>
				<td>$<%= sub %></td>
			</tr>
			<tr class="total-row">
				<th colspan="3">Tax</th>
				<td>$<%= tax.toFixed(2) %></td>
			</tr>
			<tr class="total-row">
				<th colspan="3">Total</th>
				<td>$<%= (sub + tax).toFixed(2) %></td>
			</tr>
			<tr class="button-row">
				<td colspan="4">
					<a href="/checkedout"><button class="checkout-button">Checkout</button></a>
				</td>
			</tr>
		</table>
	</div>
  </div>
</main>
